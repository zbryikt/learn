//- module
doctype html
- ctrl = {foot: {shown: true}, carbon: {}, body: {}}
- ctrl.navtop = {placeholder: true, shown: true, className: "navbar-light"}
- ctrl.navtop.className = "navbar-light text-dark"
- ctrl.navtop.transition = ";bg-semi-light"
html
  include @/@loadingio/bootstrap.ext/index.pug
  include @/ldview/index.pug
  include /modules/navtop.pug
  -
    meta = {
      title: "",
      description: "",
      thumbnail: "",
      thumb: {}
    }
  block vars
  head
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    title= meta.title 
    meta(property="og:title", content=meta.title)
    meta(property="og:description", content=meta.description)
    meta(property="og:locale",content="zh_TW")
    meta(property="og:image",content=meta.thumbnail)
    meta(property="og:image:type",content=meta.thumb.type || "image/png")
    meta(property="og:image:width",content=meta.thumb.width || "1200")
    meta(property="og:image:height",content=meta.thumb.height || "630")
    meta(property="og:type", content=meta.ogtype || "website")

    +css([
      {name: "bootstrap", path: "dist/css/bootstrap.min.css"},
      {name: "@loadingio/bootstrap.ext"},
      {name: "@loadingio/loading.css", path: "lite.min.css"},
      {name: "@loadingio/ldcolorpicker"},
      {name: "ldcover"},
      {name: "ldloader"},
      {name: "ldnotify"},
      {name: "ldbutton"},
      {name: "ldiconfont"}
    ])

    link(href="https://fonts.googleapis.com/css?family=Oxygen:700|Roboto:300,700|&display=swap", rel="stylesheet")
    block head
  body.ld-over-full-inverse(class=(ctrl.body.className || ''))
    .ld.ldld.default.text-lg
    if ctrl.navtop.shown
      +navtop
    block body
    if ctrl.foot.shown
      include /modules/foot.pug

    +script([
      {name: "bootstrap.native", path: "dist/bootstrap-native-v4.min.js"},
      {name: "bootstrap.native", path: "dist/polyfill.min.js"},
      {name: "i18next", path: "dist/umd/i18next.min.js"},
      {name: "zmgr"},
      {name: "proxise"},
      {name: "@loadingio/ldc"},
      {name: "@loadingio/ldquery"},
      {name: "@loadingio/debounce.js"},
      {name: "@plotdb/semver"},
      {name: "@plotdb/rescope"},
      {name: "@plotdb/csscope"},
      {name: "@plotdb/block"},
      {name: "ldcover"},
      {name: "ldcolor"},
      {name: "ldform"},
      {name: "curegex", path: "curegex.min.js"},
      {name: "ldview"},
      {name: "ldloader"},
      {name: "lderror"},
      {name: "ldnotify"},
      {name: "ldcvmgr"},
      {name: "@loadingio/ldcolorpicker"},
      {name: "@servebase/auth"},
      {name: "@servebase/consent"},
      {name: "@servebase/captcha"},
      {name: "@servebase/core"}
    ])

    block script
    //-include /modules/justfont.pug
